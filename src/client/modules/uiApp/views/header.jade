div.branding
  img(src='img/easy-circos-logo.png')

div
  button.btn.btn-primary.dropdown-toggle(
    type='button'
    ng-click='showLayout()'
    ng-class='{active: status.active == "layout"}'
  ) Layout

  .btn-group(
    dropdown
    id='newTrack'
    is-open='status.new_track_isopen'
  )
    button.btn.btn-warning.dropdown-toggle(
      dropdown-toggle
      type='button'
      ng-class='{active: status.active == "newTrack"}'
      ng-disabled='false'
    )
      | New track
      span.caret
    ul.dropdown-menu(role='menu')
      li(ng-repeat='trackType in trackTypes' ng-click='newTrack(trackType.type);')
        a(href='#' ng-class='{"disabled-link": !trackType.enabled}') {{ trackType.label }}

  .btn-group(
    dropdown
    is-open='status.track_isopen'
  )
    button.btn.btn-danger.dropdown-toggle(
      dropdown-toggle
      type='button'
      ng-disabled='false'
    )
      | Edit track
      span.caret
    ul.dropdown-menu(role='menu')
      li
        a.disabled-link(href='#') Heatmaps
      li(
        ng-repeat='track in tracks | filter:{type: "heatmap"}'
        ng-click='editTrack(track.id, track.type)'
      )
        a(href='#') {{ track.name }}
      li.divider
      li
        a.disabled-link(href='#') Chords
      li(ng-repeat='track in tracks | filter:{type: "chord"}')
        a(href='#') {{ track.name }}
      li.divider
      li
        a.disabled-link(href='#') Histograms

div.header-icons.help(ng-click='openHelpModal()')
  span.glyphicon.glyphicon-question-sign
div.header-icons.feedback(ng-click='openFeedbackModal()')
  span.glyphicon.glyphicon-comment